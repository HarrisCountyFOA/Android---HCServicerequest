    <style name="AppTheme.NoActionBar" parent="Base.Theme.MyApp">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.DayNight.ActionBar">
        <item name="android:textColorPrimary">@color/ColorPrimaryText</item>
    </style>
       <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.DayNight">
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/ColorPrimaryBackground</item>
        <item name="colorAccent">@color/ColorPrimaryText</item>
    </style>

    <style name="MyDialogStyle" parent="Theme.AppCompat.DayNight.Dialog.Alert"/>

